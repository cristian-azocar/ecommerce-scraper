{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
  },
  "references": [
    { "path": "packages/types" },
    { "path": "packages/database" },
    { "path": "packages/scraper" }
  ]
}
