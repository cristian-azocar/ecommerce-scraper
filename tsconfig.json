{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "exclude": ["**/.*/", "**/node_modules"],
}
